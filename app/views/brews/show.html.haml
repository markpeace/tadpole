%p#notice= notice

%p
  %b User:
  = @brew.user_id
%p
  %b Name:
  = @brew.name
%p
  %b Date:
  = @brew.date
= link_to 'Steps', steps_path(:brew=>@brew.id)
\|
= link_to 'Edit', edit_brew_path(@brew)
\|
= link_to 'Back', brews_path

= simple_form_for "submit", :url=>"/brew/#{@brew.id}/importsteps" do |f|
  =f.input :source_brew, collection:@brew.user.brews, :label=>"Import Steps From"
  =f.submit
