%h3 Shopping List

-Brew.first.inventory.inspect

=form_for "Inventory" do |f|
	%table.table.table-condensed.table-striped.table-hover
		%tr
			%th Type
			%th Name
			%th Recipes(g)
			%th Onhand (g)
			%th To Buy (g)
			%th Increment Amount
		- @shopping_list.each do |item|
			%tr
				%td=item[:type]
				%td=item[:label]
				%td=item[:grams]
				%td=item[:onhand]
				%td=item[:grams]-item[:onhand]
				%td=f.text_field item[:label]

		%tr
			%td
			%td
			%td
			%td
			%td
			%td=f.submit "Increase Inventory"